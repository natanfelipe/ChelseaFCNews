<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/textWhiteColor</item>
        <item name="iconTint">@color/textWhiteColor</item>
    </style>

    <style name="headLine" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/headLine_text_size</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

    <style name="bodyText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

    <style name="authorText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/author_text_size</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

    <style name="dateText" parent="authorText">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
